{
  "$schema": "https://developers.reddit.com/schema/config-file.v1.json",
  "name": "binarygrid",
  "post": {
    "dir": "dist/client",
    "entrypoints": {
      "default": {
        "entry": "index.html"
      }
    }
  },
  "server": {
    "dir": "dist/server",
    "entry": "index.cjs"
  },
  "permissions": {
    "redis": true,
    "reddit": {
      "asUser": ["SUBSCRIBE_TO_SUBREDDIT"]
    }
  },
  "media": {
    "dir": "assets"
  },
  "menu": {
    "items": [
      {
        "label": "Create a new Game",
        "description": "Binary Grid",
        "location": "subreddit",
        "forUserType": "moderator",
        "endpoint": "/internal/menu/post-create"
      }
    ]
  },
  "scheduler": {
    "tasks": {
      "daily-puzzle-post": {
        "endpoint": "/internal/schedule/daily",
        "cron": "35 16 * * *"
      }
    }
  },
  "triggers": {
    "onAppInstall": "/internal/on-app-install"
  },
  "dev": {
    "subreddit": "binarygrid"
  }
}
