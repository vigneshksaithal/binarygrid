{
  "$schema": "https://developers.reddit.com/schema/config-file.v1.json",
  "name": "binarygrid",
  "post": {
    "dir": "dist/client",
    "entrypoints": {
      "default": {
        "entry": "index.html",
        "inline": true,
        "height": "tall"
      }
    }
  },
  "server": {
    "dir": "dist/server",
    "entry": "index.cjs"
  },
  "permissions": {
    "redis": true,
    "reddit": {
      "asUser": [
        "SUBSCRIBE_TO_SUBREDDIT",
        "SUBMIT_COMMENT"
      ]
    }
  },
  "media": {
    "dir": "assets"
  },
  "menu": {
    "items": [
      {
        "label": "Create a new Game",
        "description": "Binary Grid",
        "location": "subreddit",
        "forUserType": "moderator",
        "endpoint": "/internal/menu/post-create"
      }
    ]
  },
  "triggers": {
    "onAppInstall": "/internal/on-app-install"
  },
  "scheduler": {
    "tasks": {
      "daily-post": {
        "endpoint": "/internal/schedule/daily",
        "cron": "0 14 * * *"
      }
    }
  },
  "dev": {
    "subreddit": "cat543"
  },
  "scripts": {
    "dev": "vite build --watch",
    "build": "vite build"
  }
}