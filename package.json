{
  "private": true,
  "name": "binarygrid",
  "version": "0.1.1",
  "type": "module",
  "scripts": {
    "postinstall": "npm run build",
    "build:client": "cd src/client && vite build",
    "build:server": "cd src/server && vite build",
    "build": "npm run build:client && npm run build:server",
    "deploy": "npm run build && devvit upload",
    "dev": "concurrently -k -p \"[{name}]\" -n \"CLIENT,SERVER,DEVVIT\" -c \"blue,green,magenta\" \"npm run dev:client\" \"npm run dev:server\" \"npm run dev:devvit\"",
    "dev:client": "cd src/client && vite build --watch",
    "dev:devvit": "dotenv -e .env -- devvit playtest",
    "dev:server": "cd src/server && vite build --watch",
    "preview:client": "cd src/client && vite preview",
    "preview:server": "cd src/server && vite preview",
    "preview": "concurrently -k -p \"[{name}]\" -n \"CLIENT,SERVER\" -c \"blue,green\" \"npm run preview:client\" \"npm run preview:server\"",
    "login": "devvit login",
    "check": "svelte-check --tsconfig ./src/client/tsconfig.json",
    "launch": "npm run build && npm run deploy && devvit publish",
    "type-check": "tsc --build",
    "test": "vitest run"
  },
  "dependencies": {
    "@devvit/web": "0.12.6",
    "@hono/node-server": "^1.19.7",
    "@lucide/svelte": "^0.561.0",
    "@tailwindcss/vite": "^4.1.18",
    "canvas-confetti": "^1.9.4",
    "devvit": "0.12.6",
    "hono": "^4.11.1",
    "tailwindcss": "^4.1.18"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^6.2.1",
    "@types/canvas-confetti": "^1.9.0",
    "@types/node": "^25.0.2",
    "concurrently": "^9.2.1",
    "dotenv-cli": "^11.0.0",
    "svelte": "^5.46.0",
    "svelte-check": "^4.3.4",
    "typescript": "^5.9.3",
    "vite": "8.0.0-beta.2",
    "vitest": "^4.0.16"
  }
}